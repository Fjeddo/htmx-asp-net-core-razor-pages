@page
@model ContactsModel
@{
    Layout = null;
}

<form id="checked-contacts"
      hx-post="@Url.PageLink("Contacts")"
      hx-swap="outerHTML settle:3s"
      hx-target="#toast">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var contact in Model.Contacts)
            {
                @await Html.PartialAsync("_Contact", contact)
            }
        </tbody>
    </table>
    <input type="submit" value="Bulk Update">

    <style type="text/css">
        #toast.htmx-settling {
            opacity: 100;
        }

        #toast {
            background: #FC6A03;
            opacity: 0;
            transition: opacity 3s ease-out;
        }
    </style>
    
    <span id="toast"></span>
</form>
