@model With.ASP.NET.RazorPages.Pages.Examples.EditRow.Data.Person

<tr class="editing"
    hx-trigger="cancel"
    hx-get="@Url.PageLink("Index", "View", values: new {id = Model.Id})">

    <td><input name="name" value="@Model.Name"></td>
    <td><input name="email" value="@Model.Email"></td>
    <td>
        <button class="btn danger"
                hx-get="@Url.PageLink("Index", "View", values: new { id = Model.Id })">
            Cancel
        </button>
        <button class="btn danger"
                hx-put="@Url.PageLink("Index", values: new { id = Model.Id })"
                hx-include="closest tr">
            Save
        </button>
    </td>
</tr>