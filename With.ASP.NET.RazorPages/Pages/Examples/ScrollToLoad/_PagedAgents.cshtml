@model (Data.Agent[] Agents, int Page)

@foreach (var agent in Model.Agents)
{
    <tr><td>@agent.Name</td><td>@agent.Email</td><td>@agent.ID</td></tr>
}

<tr id="replaceMe">
    <td colspan="3">
        <center>
            <span class="htmx-indicator"
                  hx-get="@Url.PageLink("Index", values: new { currentPage = Model.Page + 1 })"
                  hx-trigger="revealed"
                  hx-target="#replaceMe"
                  hx-swap="outerHTML"
                  hx-indicator=".htmx-indicator">
                <img src="/img/bars.svg" alt="Loading..." />
            </span>
        </center>
    </td>
</tr>